<div id="<%= dom_id transaction %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Avatar:</strong>
    <%= transaction.avatar %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Name:</strong>
    <%= transaction.name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Category:</strong>
    <%= transaction.category %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Date:</strong>
    <%= transaction.date %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Amount:</strong>
    <%= transaction.amount %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Recurring:</strong>
    <%= transaction.recurring? ? "Yes" : "No" %>
  </div>
</div>
