<div class="mx-auto w-full max-w-md px-4 py-8">
  <% if flash[:notice] %>
    <div class="mb-4 text-sm font-medium text-green-600">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <% if flash[:alert] %>
    <div class="mb-4 text-sm font-medium text-red-600">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <h1 class="mb-8 text-3xl leading-10 font-bold text-gray-900">
    Login
  </h1>

  <%= form_with url: session_url, method: :post, class: "space-y-6" do |form| %>
    <div>
      <label for="email" class="block text-xs leading-none font-bold text-gray-500">
        Email
      </label>
      <%= form.email_field :email_address,
                       required: true,
                       autofocus: true,
                       autocomplete: "username",
                       value: params[:email_address],
                       placeholder: "you@example.com",
                       class:
                         "mt-1 block w-full rounded-md border-gray-300 shadow-xs focus:border-indigo-500 focus:ring-indigo-500" %>

      <% if flash[:email_error] %>
        <p class="mt-2 text-sm text-red-600"><%= flash[:email_error] %></p>
      <% end %>
    </div>

    <div>
      <label
        for="password"
        class="block text-xs leading-none font-bold text-gray-500"
      >
        Password
      </label>
      <%= form.password_field :password,
                          required: true,
                          autocomplete: "current-password",
                          maxlength: 72,
                          placeholder: "••••••••",
                          class:
                            "mt-1 block w-full rounded-md border-gray-300 shadow-xs focus:border-indigo-500 focus:ring-indigo-500" %>

      <% if flash[:password_error] %>
        <p class="mt-2 text-sm text-red-600"><%= flash[:password_error] %></p>
      <% end %>
    </div>

    <div class="block">
      <label class="flex items-center">
        <%= check_box_tag :remember_me,
        "1",
        false,
        class:
          "rounded-sm border-gray-300 text-gray-900 shadow-xs focus:ring-indigo-500" %>
        <span class="ml-2 text-sm text-gray-600">Remember me</span>
      </label>
    </div>

    <div class="mt-6">
      <%= form.submit "Log in",
                  class:
                    "w-full inline-flex items-center justify-center rounded-md bg-gray-900 py-3 text-sm font-bold tracking-widest text-white transition duration-150 ease-in-out hover:bg-gray-700 focus:bg-gray-700 focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
    </div>

    <div class="mt-8 flex justify-center">
      <%= link_to "Forgot your password?",
      new_password_path,
      class:
        "rounded-md text-sm text-gray-600 underline hover:text-gray-900 focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 focus:outline-none" %>
    </div>

    <div class="mt-8 flex items-baseline justify-center gap-2">
      <span class="text-sm leading-tight font-normal text-gray-500">
        Need to create an account?
      </span>
      <%= link_to "Sign up",
      new_session_path,
      class: "text-sm leading-tight font-bold text-gray-900 underline" %>
    </div>
  <% end %>
</div>
